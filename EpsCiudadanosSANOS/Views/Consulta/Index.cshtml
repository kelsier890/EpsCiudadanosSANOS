@model List<EpsCiudadanosSANOS.Models.TableViewModels.ConsultaTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Consultas</h2>
<div class="row">
    <div class="col-md.12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Consulta/Add")'" value="Nueva Consulta" />
    </div>
</div>

<br />

<div class="row">
    <div class="col.lg-12">
        <table class="table table-bordered">
            <tr>
                <th>IdConsulta</th>
                <th>Fecha</th>
                <th>Motivo</th>
                <th>Medico</th>
                <th>Paciente</th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.id</td>
                    <td>@oElemento.Fecha</td>
                    <td>@oElemento.Motivo</td>
                    <td>@oElemento.NombreMedico</td>
                    <td>@oElemento.NombrePaciente</td>
                </tr>
            }
        </table>
    </div>
</div>

